<h1>Eat Da' Burger!</h1>

<ul>
    {{#each burgers}}
  	    <li>
            <img src="/assets/img/burger.jpg">
  		    <p><span class="label">ID:</span> {{this.id}}</p>
            <p><span class="label">Quote:</span> {{this.burger_name}}</p>
            <button data-id="{{this.id}}" class="devour">Devour!</button>
  	    </li>
    {{/each}}
</ul>

<form class="create-form">
    <div class="form-group">
        <label for="newBurger">New Burger:</label>
        <input type="text" id="newBurger" name="burger">
    </div>
    <button type="submit">Add Da' Burger!</button>
</form>

<script>
    $(function(){
        $(".devour").on("click", function(event){
            var id=$(this).data("id");
            $.ajax(id, {type: "PUT"}).then(function(){
                location.reload();
            });
        });
        $(".create-form").on("submit", function(event){
            event.preventDefault();
            var newBurger=$("#newBurger").val().trim();
            $.ajax(newBurger, {type: "POST"}).then(function(){
                location.reload();
            });
        });
    });
</script>